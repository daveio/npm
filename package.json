{
  "name": "dave.io",
  "version": "0.0.13",
  "description": "Meta package for Dave Williams",
  "homepage": "https://github.com/daveio/npm#readme",
  "bugs": {
    "url": "https://github.com/daveio/npm/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daveio/npm.git"
  },
  "license": "MIT",
  "author": {
    "name": "Dave Williams",
    "email": "dave@dave.io",
    "url": "https://dave.io"
  },
  "type": "module",
  "main": "./src/cmd.ts",
  "bin": {
    "dave.io": "./dist/cmd.js"
  },
  "scripts": {
    "start": "bun src/cmd.ts",
    "make": "bun run clean && bun build --target node src/* --outdir dist",
    "clean": "rm -rf dist",
    "test": "bun test",
    "docker:build": "docker build -t dave-io:latest -f Dockerfile .",
    "docker:run": "docker run -it --rm dave-io:latest",
    "docker": "bun run docker:build && bun run docker:run"
  },
  "dependencies": {
    "@types/bun": "^1.2.13",
    "chalk": "5.4.1",
    "chalk-animation": "2.0.3",
    "gradient-string": "3.0.0",
    "ora": "8.2.0",
    "update-notifier": "7.3.1"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": "~1.2.13"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@biomejs/biome": "^1.9.4"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
